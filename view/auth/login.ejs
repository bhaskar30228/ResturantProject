<%- include('../partials/head') %>
<!-- Google Fonts and Font Awesome -->
<link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
  body {
    background: #f8e9d2;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
  }

  .signin-container {
    background: #fff;
    padding: 2.5rem 2rem;
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(60, 60, 60, 0.15);
    width: 350px;
    max-width: 90vw;
    margin: 4rem auto; /* Centered under navbar */
  }

  .signin-container h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #b22222;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .input-group {
    position: relative;
    margin-bottom: 1.2rem;
  }

  .input-group i {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    color: #b22222;
    font-size: 1.1rem;
  }

  .input-group input {
    width: 100%;
    padding: 0.75rem 0.75rem 0.75rem 3rem;
    border: 1px solid #fcb69f;
    border-radius: 8px;
    font-size: 1rem;
    outline: none;
    transition: border 0.2s;
    box-sizing: border-box;
  }

  .input-group input:focus {
    border-color: #b22222;
  }

  .signin-btn {
    width: 100%;
    padding: 0.75rem;
    background: linear-gradient(90deg, #b22222 0%, #ffd700 100%);
    border: none;
    border-radius: 8px;
    color: #fff;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 0.5rem;
  }

  .signin-btn:hover {
    background: linear-gradient(90deg, #ffd700 0%, #b22222 100%);
    color: #22223b;
  }

  .links {
    text-align: center;
    margin-top: 1rem;
  }

  .links a {
    color: #b22222;
    text-decoration: none;
    font-size: 0.95rem;
    margin: 0 0.5rem;
  }

  .links a:hover {
    text-decoration: underline;
  }
</style>
</head>

<body>
  <%- include('../partials/nav') %>
  
  <div class="signin-container">
    <%- include('../partials/error') %>
    <h2><i class="fas fa-utensils"></i> Restaurant Login</h2>
    <form action="/auth/login" method="POST" autocomplete="off">
      <div class="input-group">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email" placeholder="Email" required autocomplete="off" value="<%= oldInput.email?oldInput.email:'' %>">
      </div>
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" name="password" placeholder="Password" required autocomplete="new-password">
      </div>
      <button class="signin-btn" type="submit">
        <i class="fas fa-sign-in-alt"></i> Sign In
      </button>
    </form>
    <div class="links">
      <a href="/auth/forgot">Forgot Password?</a> |
      <a href="/auth/signUp">Create Account</a>
    </div>
  </div>
</body>
</html>
